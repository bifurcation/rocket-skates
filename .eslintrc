{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "arrow-spacing": [2, {"before": true, "after": true}],
    "block-spacing": [2, "always"],
    "comma-dangle": [2, "never"],
    "comma-spacing": [2, {"before": false, "after": true}],
    "consistent-return": [2],
    "curly": [2],
    "default-case": [2],
    "dot-location": [2, "property"],
    "eol-last": [2, "unix"],
    "eqeqeq": [1, "smart"],
    "guard-for-in": [1],
    "handle-callback-err": [2],
    "indent": [1, 2, {"VariableDeclarator": {"var": 2, "let": 2, "const": 3}, "SwitchCase": 1}],
    "key-spacing": [1, {"align": "value", "beforeColon": false, "afterColon": true}],
    "max-params": [1, 4],
    "no-cond-assign": [2],
    "no-console": [1],
    "no-constant-condition": [1],
    "no-debugger": [1],
    "no-dupe-args": [2],
    "no-dupe-keys": [2],
    "no-duplicate-case": [2],
    "no-empty-character-class": [2],
    "no-empty": [2],
    "no-else-return": [2],
    "no-eval": [2],
    "no-ex-assign": [2],
    "no-extra-semi": [2],
    "no-fallthrough": [2],
    "no-func-assign": [2],
    "no-inner-declarations": [2],
    "no-invalid-regexp": [2],
    "no-irregular-whitespace": [2],
    "no-mixed-requires": [2],
    "no-negated-in-lhs": [2],
    "no-shadow": [1],
    "no-throw-literal": [2],
    "no-trailing-spaces": [2],
    "no-undef": [2],
    "no-unexpected-multiline": [2],
    "no-unreachable": [2],
    "no-unused-vars": [2],
    "no-var": [2],
    "no-warning-comments": [1, { "terms": ["todo", "fixme"], "location": "start" }],
    "no-with": [2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-function-paren": [1, "never"],
    "strict": [2, "global"],
    "use-isnan": [2],
    "valid-jsdoc": [1],
    "valid-typeof": [2]
  }
}
